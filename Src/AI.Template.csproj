 <Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <PackageType>Template</PackageType>
        <PackageVersion>1.0</PackageVersion>
        <PackageId>AI.Microservice.Template</PackageId>
        <Title>AI Microservice Template</Title>
        <Authors>YourName</Authors>
        <Description>Template for creating a microservice solution with multiple projects.</Description>
        <PackageTags>dotnet-new;templates;microservice</PackageTags>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        
        <TargetFramework>net8.0</TargetFramework>

        <IncludeContentInPack>true</IncludeContentInPack>
        <IncludeBuildOutput>false</IncludeBuildOutput>
        <ContentTargetFolders>content</ContentTargetFolders>
        <NoWarn>$(NoWarn);NU5128</NoWarn>
        <NoDefaultExcludes>true</NoDefaultExcludes>
    </PropertyGroup>

    <ItemGroup>
        <Content Include="Content\AI.Project.sln" />
        <Content Include="Content\Directory.Build.props" />
        <Content Include="Content\Directory.Packages.props" />
        <Content Include="Content\Src\AI.Project\**\*" Exclude="Content\Src\AI.Project\**\bin\**;Content\Src\AI.Project\**\obj\**" />
        <Content Include="Content\Src\AI.Project.Host\**\*" Exclude="Content\Src\AI.Project.Host\**\bin\**;Content\Src\AI.Project.Host\**\obj\**" />
        <Content Include="Content\Src\AI.Project.Http.Contracts\**\*" Exclude="Content\Src\AI.Project.Http.Contracts\**\bin\**;Content\Src\AI.Project.Http.Contracts\**\obj\**" />
        <Content Include="Content\Src\AI.Project.Migrations\**\*" Exclude="Content\Src\AI.Project.Migrations\**\bin\**;Content\Src\AI.Project.Migrations\**\obj\**" />
        <Content Include="Content\Src\AI.Project.Entities\**\*" Exclude="Content\Src\AI.Project.Entities\**\bin\**;Content\Src\AI.Project.Entities\**\obj\**" />
        <Content Include="Content\Tests\AI.Project.Tests\**\*" Exclude="Content\Tests\AI.Project.Tests\**\bin\**;Content\Tests\AI.Project.Tests\**\obj\**" />
        <Content Include=".template.config\**\*" />
    </ItemGroup>

    <ItemGroup> 
        <Compile Remove="Content\**\*"/>
    </ItemGroup>

</Project>